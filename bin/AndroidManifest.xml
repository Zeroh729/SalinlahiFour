<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ube.salinlahifour"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBar" >
        <activity
            android:name="com.ube.salinlahifour.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ube.salinlahifour.SelectUserActivity"
            android:label="@string/title_activity_select_user" >
        </activity>
        <activity
            android:name="com.ube.salinlahifour.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="com.ube.salinlahifour.lessonActivities.AbstractLessonActivity"
            android:label="@string/title_activity_lesson" >
        </activity>
        <activity
            android:name="com.ube.salinlahifour.AbstractTutorialActivity"
            android:label="@string/title_activity_abstract_tutorial" >
        </activity>
        <activity
            android:name="com.ube.salinlahifour.lessonActivities.CookingActivity"
            android:label="@string/title_activity_lesson" >
            <intent-filter>
                <action android:name="com.ube.salinlahifour.lessonActivities.CookingActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ube.salinlahifour.tutorials.CookingTut"
            android:label="@string/title_activity_abstract_tutorial" >
            <intent-filter>
                <action android:name="com.ube.salinlahifour.tutorials.CookingTut"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
