<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_this"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/map">
    
    <ImageButton
        android:id="@+id/img_lesson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_marginLeft="50dp"
        />
    
    <ImageButton
        android:id="@+id/img_lesson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson1" 
        android:visibility="invisible"
        android:layout_marginLeft="50dp"/>

    <ImageButton
        android:id="@+id/img_lesson3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson2"
        android:visibility="invisible"
        android:layout_marginLeft="50dp"/>
    
    <ImageButton
        android:id="@+id/img_lesson4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson3" 
        android:visibility="invisible"
        android:layout_marginLeft="50dp"/>
    
    <ImageButton
        android:id="@+id/img_lesson5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_lesson4"
        android:visibility="invisible"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" 
         />

    <TextView
        android:id="@+id/tv_lesson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_lesson1"
        android:layout_below="@+id/img_lesson1"
        android:layout_marginTop="21dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_lesson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_lesson1"
        android:layout_alignBottom="@+id/tv_lesson1"
        android:layout_alignLeft="@+id/img_lesson2"
        android:text="" />

    <TextView
        android:id="@+id/tv_lesson3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_lesson1"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/img_lesson3"
        android:text="" />

    <TextView
        android:id="@+id/tv_lesson4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_lesson2"
        android:layout_alignBottom="@+id/tv_lesson2"
        android:layout_alignLeft="@+id/img_lesson4"
        android:text="" />

    <TextView
        android:id="@+id/tv_lesson5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_lesson3"
        android:layout_alignBottom="@+id/tv_lesson3"
        android:layout_alignLeft="@+id/img_lesson5"
        android:text="" />

    <Button
        android:id="@+id/btn_usermodule"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Debug User Module" 
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_register"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_usermodule"
        android:text="Register User" 
        android:onClick="onClick"/>
    
</RelativeLayout>
