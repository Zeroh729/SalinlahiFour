<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/map_bg">

    
    <ImageButton
        android:id="@+id/img_lesson3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/lesson1_icon"
        android:layout_centerInParent="true"
        android:scaleX="0.8"
        android:scaleY="0.8"/>
    
    <ImageButton
        android:id="@+id/img_lesson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/img_lesson3"
        android:layout_marginBottom="-80dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />
    
    <ImageButton
        android:id="@+id/img_lesson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_lesson3"
        android:layout_marginRight="60dp"
        android:layout_marginTop="-80dp"
        android:layout_toLeftOf="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />

    <ImageButton
        android:id="@+id/img_lesson4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/img_lesson3"
        android:layout_marginBottom="-50dp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />
    
    <ImageButton
        android:id="@+id/img_lesson5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_lesson3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-90dp"
        android:layout_toRightOf="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />
    
    <Button
        android:id="@+id/btn_usermodule"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Debug User Module" 
        android:onClick="onClick"/>
   

    <Button
        android:id="@+id/btn_register"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_usermodule"
        android:text="Register User" 
        android:onClick="onClick"/>
    
</RelativeLayout>
