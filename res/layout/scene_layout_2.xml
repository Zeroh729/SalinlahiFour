<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_view"
    android:background="@drawable/map_bg">
    
    <ImageButton
        android:id="@+id/img_lesson3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/lesson1_icon"
        android:layout_centerInParent="true"
        android:scaleX="0.8"
        android:scaleY="0.8"/>
    
    <ImageButton
        android:id="@+id/img_lesson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_lesson3"
        android:layout_alignBottom="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />
    
    <ImageButton
        android:id="@+id/img_lesson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_lesson2"
        android:layout_alignBottom="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />

    <ImageButton
        android:id="@+id/img_lesson4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_lesson3"
        android:layout_alignBottom="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />
    
    <ImageButton
        android:id="@+id/img_lesson5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_lesson4"
        android:layout_alignBottom="@id/img_lesson3"
        android:background="@null"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/lesson1_icon" />

</RelativeLayout>
