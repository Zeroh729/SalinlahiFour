<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	xmlns:qwerjk="http://schemas.android.com/apk/res/com.qwerjk.better_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="${packageName}.${activityClass}" xmlns:app="http://schemas.android.com/apk/res/com.ube.salinlahifour">
    
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fillViewport="true"
        >
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
            >
            
	    <RadioGroup 
	        android:id="@+id/radiog_character"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        >
	        
		    <RadioButton 
		        android:id="@+id/rdo_char1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        android:text="Popo"   
		        />
		    
		    <RadioButton 
		        android:id="@+id/rdo_char2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        />
		    
		    <RadioButton 
		        android:id="@+id/rdo_char3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        />
		    
		    <RadioButton 
		        android:id="@+id/rdo_char4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        />
	        
		    <RadioButton 
		        android:id="@+id/rdo_char5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        />
		    
		    <RadioButton 
		        android:id="@+id/rdo_char6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        />
		    
		    <RadioButton 
		        android:id="@+id/rdo_char7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        />
		    
		    <RadioButton 
		        android:id="@+id/rdo_char8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:visibility="gone"
		        android:button="@null"
		        android:textColor="@color/login_name_tag"
		        />
		    
		    <ImageButton
		        android:id="@+id/btn_register"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="12dp"
		        android:text="Register"
		        android:onClick="onClick"
				android:background="@null"
		        />
	    </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>
    
		    
    
    <TextView 
        android:id="@+id/tv_userdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:\nLevel:"
        android:textSize="36sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="100dp"
        android:textColor="#FFFFFF"
        />
    
	<ImageButton
		android:id="@+id/btn_login"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClick"
		android:layout_alignBottom="@id/tv_userdetails"
		android:layout_marginRight="100dp"
		android:layout_alignParentRight="true"
		android:background="@null"
	/>
	
	<ImageButton
		android:id="@+id/btn_delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClick"
		android:layout_margin="10dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:background="@null"
	/>
	
    <RelativeLayout 
        android:id="@+id/layout_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:onClick="onClick"
        >
        
    <View 
        android:id="@+id/view_blackoverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        ></View>
    
    <ImageView 
        android:id="@+id/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/popupwindow"/>
    
    <com.qwerjk.better_text.MagicTextView
        xmlns:qwerjk="http://schemas.android.com/apk/res/com.qwerjk.better_text"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/popup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Delete Character"
        android:textColor="#FFFFFF"
        android:textSize="48sp" 
        android:padding="10dp"/>
    
    <TextView 
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:layout_alignTop="@id/popup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:textColor="#FFFFFF"
        android:textSize="42sp"/>
    
    <ImageButton
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/popup"
        android:layout_alignBottom="@id/popup"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:onClick="onClick"
        />
    
    <ImageButton
        android:id="@+id/btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/popup"
        android:layout_alignBottom="@id/popup"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:onClick="onClick"
        />
    
    <ImageButton
        android:id="@+id/btn_popupclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/popup"
        android:layout_alignTop="@id/popup"
        android:layout_marginRight="-20dp"
        android:layout_marginTop="-20dp"
        android:background="@null"
        android:onClick="onClick"
        />
        
    </RelativeLayout>

</RelativeLayout>
