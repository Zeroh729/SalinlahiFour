<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<View 
        android:id="@+id/view_blackoverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
    ></View>
	
	<ImageView
	    android:id="@+id/bg_gamepause"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:src="@drawable/windowpopup"
	    />
	
	<ImageButton
	    android:id="@+id/btn_yes"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/bg_gamepause"
	    android:layout_alignBottom="@id/bg_gamepause"
	    android:layout_marginBottom="15dp"
	    android:layout_marginLeft="-10dp"
	    android:background="@null"
	    android:scaleX="0.7"
	    android:scaleY="0.7"
	    android:src="@drawable/btn_yes"
	    />
	
	<ImageButton
	    android:id="@+id/btn_no"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@id/bg_gamepause"
	    android:layout_alignBottom="@id/bg_gamepause"
	    android:layout_marginBottom="15dp"
	    android:layout_marginRight="-10dp"
	    android:background="@null"
	    android:scaleX="0.7"
	    android:scaleY="0.7"
	    android:src="@drawable/btn_no"
	    />
	
	

</RelativeLayout>
