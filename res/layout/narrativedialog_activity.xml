<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/img_talkbubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/narrativestory_bubble"
        android:visibility="invisible"
        />
    
    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:textSize="25sp"
        android:padding="14dp"
        android:layout_alignLeft="@+id/img_talkbubble"
        android:layout_alignTop="@+id/img_talkbubble"
        android:layout_alignBottom="@+id/img_talkbubble"
        android:layout_alignRight="@+id/img_talkbubble"
        android:gravity="center_horizontal"
        />
    
    <ImageView
        android:id="@+id/anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />
    
    <ImageView
        android:id="@+id/character1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/anchor"
        android:layout_alignBottom="@id/anchor"
        android:visibility="invisible"
     />
    
    <ImageView
        android:id="@+id/character2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/character1"
        android:layout_alignBottom="@id/character1"
        android:visibility="invisible"
     />
    <ImageView
        android:id="@+id/character3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/character2"
        android:layout_alignBottom="@id/character1"
        android:visibility="invisible"
     />
    <ImageView
        android:id="@+id/character4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/character3"
        android:layout_alignBottom="@id/character1"
        android:visibility="invisible"
     />
    <ImageView
        android:id="@+id/character5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/character4"
        android:layout_alignBottom="@id/character1"
        android:visibility="invisible"
     />
    <ImageView
        android:id="@+id/character6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/character5"
        android:layout_alignBottom="@id/character1"
        android:visibility="invisible"
     />
    
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="next"
        android:background="@null"
        />
    
    <ImageButton
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:onClick="skip"
        android:background="@null"
        />

</RelativeLayout>
